{
  "manifest_version": 3,
  "name": "Worker-Bee",
  "version": "1.0",
  "description": "Quiz yourself on The-Hive courses with AI-powered flashcards and summaries.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://the-hive.bbd.co.za/course/*",
    "https://us-central1-bee-keeper-57fbe.cloudfunctions.net/*", 
    "http://127.0.0.1:5001/bee-keeper-57fbe/us-central1/generate"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "beekeper-logo.png",
      "48": "beekeper-logo.png",
      "128": "beekeper-logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://the-hive.bbd.co.za/*", "https://bkfe--bee-keeper-57fbe.us-central1.hosted.app/*", "http://localhost:9002/*", "https://6000-firebase-studio-1755949491098.cluster-fbfjltn375c6wqxlhoehbz44sk.cloudworkstations.dev/*"],
      "js": ["content.js"]
    }
  ]
}

{
  "manifest_version": 3,
  "name": "Worker-Bee",
  "version": "1.0",
  "description": "Quiz yourself on The-Hive courses with AI-powered flashcards and summaries.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://the-hive.bbd.co.za/course/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo1.png",
      "48": "images/logo1.png",
      "128": "images/logo1.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://the-hive.bbd.co.za/*"],
      "js": ["content.js"]
    }
  ]
}
